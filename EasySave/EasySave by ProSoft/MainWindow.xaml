<Window x:Class="EasySave_by_ProSoft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_by_ProSoft"
        mc:Ignorable="d"
        Title="EasySave 2.0" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Gestion des Sauvegardes" Margin="5" Click="ShowBackupJobs_Click"/>
            <Button Content="Paramètres" Margin="5" Click="ShowSettings_Click"/>
            <Button Content="Quitter" Margin="5" Click="Exit_Click"/>
        </StackPanel>

        <ContentControl Grid.Row="1" x:Name="MainContentArea" Margin="10"/>

    </Grid>
</Window>